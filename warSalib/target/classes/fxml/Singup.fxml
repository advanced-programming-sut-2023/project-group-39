<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.SignupView"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="30" layoutY="100">
        <TextField promptText="Username" fx:id="username" maxWidth="300"/>
        <PasswordField promptText="Password" fx:id="password" maxWidth="300"/>
        <PasswordField promptText="Confirm your password" fx:id="confirm" maxWidth="300"/>
        <TextField promptText="Nickname" fx:id="nickname" maxWidth="300"/>
        <TextField promptText="Email" fx:id="email" maxWidth="300"/>
        <TextField promptText="Slogan" fx:id="slogan" maxWidth="300"/>
        <Spinner promptText="Password recovery question" fx:id="spinner" maxWidth="300" onMouseClicked="#getSpinnerValue"/>
        <Button text="Sign up" onMouseClicked="#signUp"/>
    </VBox>


</Pane>
